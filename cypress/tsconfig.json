{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node"],
    "isolatedModules": false,
    "noEmit": true,
    "composite": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true
  },
  "include": ["../client/src/components/**/*.tsx",
    "../client/src/components/**/*.ts",
    "../fixtures/**/*.json",
    "**/*.cy.ts",
    "**/*.cy.tsx","**/*.tsx", "**/*.ts", "**/*.js", "**/*.jsx"]
}
